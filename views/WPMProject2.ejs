  <!-- Action Buttons -->
  <div class="action-buttons">
    <button id="add-report-btn" class="action-btn">
      <i class="fas fa-plus"></i> Add a Report
    </button>
    <button id="view-reports-btn" class="action-btn">
      <i class="fas fa-list"></i> View Previous Reports
    </button>
  </div>

  <!-- Report Modal -->
  <div id="report-modal" class="modal" enctype="multipart/form-data">
    <div class="modal-content">
      <span class="close">&times;</span>
      <h2>Report a Water Problem</h2>
      <form id="report-form">
        <div class="form-group">
          <label for="report-title">Title</label>
          <input type="text" id="report-title" name="title" required />
        </div>
        <div class="form-group">
          <label for="report-issue">Issue Description</label>
          <textarea id="report-issue" name="description" rows="4" required></textarea>
        </div>
        <div class="form-group">
          <label for="report-image">Add Image</label>
          <input type="file" id="report-image" name="image" accept="image/*" />
          <div id="image-preview">Image preview will appear here</div>
        </div>
        <div class="form-group">
          <label for="report-location">Location</label>
          <input type="text" id="report-location" name="location" required />
          <button type="button" id="use-map-location">Use Current Map Location</button>
          <p class="coordinates" id="location-coordinates">Coordinates: Not selected</p>
        </div>
        <button type="submit" class="submit-btn">Submit Report</button>
      </form>
    </div>
  </div>

  <!-- Reports Section -->
  <section id="reports-section" class="reports-section hidden">
    <h2>Your Previous Reports</h2>
    <div id="reports-container">
      <p id="no-reports-message">No reports by you</p>
